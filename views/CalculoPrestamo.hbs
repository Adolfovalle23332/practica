<h1 class="mt-3">Cálculo de Prestamo Examen</h1>

<form action="/prestamo" method="post">
  <div class="form-group">
    <label for="periodos">Periodos(años)</label>
    <input type="text" name="periodo" id="periodo" class="form-control">
  </div>
  <div class="form-group">
    <label for="Capital">Capital </label>
    <input type="text" name="Capital" id="Capital" class="form-control">
  </div>
  <div class="form-group">
    <label for="interes">tasaInteres(%)</label>
    <input type="text" name="interes" id="interes" class="form-control">
  </div>
   <div class="form-group">
    <label for="Saldo">SaldoFinal</label>
    <input type="text" name="Saldo" id="Saldo" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Calcular</button>
</form>